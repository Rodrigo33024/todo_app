<% if user_signed_in? %>
  <div class="col-md-10 col-md-offset-1">
    <% @items.each do |item| %>
      <div class="index-wrapper">
        <% if item.completed? %>
          <div class="row item">
            <div class="col-md-2">
              <p><%= link_to complete_item_path(item), method: :patch do %></p>
                  <i class="fa fa-check fa-lg"></i>
              <% end %>
            </div>
            <div class="col-md-2">
              <p><%= link_to item, method: :delete, data: {confirm: 'Are you sure?'} do %></p>
                  <i class="fa fa-trash fa-lg"></i>
              <% end %>
            </div>

            <div class="col-md-8 completed-item-row">
              <h2 class="item-title">
                <strike>
                  <%= link_to item.title, item %>
                </strike>
              </h2>
              <p class="item-sub-title item-desc"><%= item.description %></p>
              <p class="time-created-at item-sub-title">
                Completed <%= time_ago_in_words(item.completed_at) %> ago
              </p>
            </div>
          </div>
        <% else %>
            <div class="row item">
              <div class="col-md-2">
                <p><%= link_to complete_item_path(item), method: :patch do %></p>
                    <i class="fa fa-check fa-lg"></i>
                <% end %>
              </div>
              <div class="col-md-8">
                <h2 class="item-title"><%= link_to item.title, item_path(item) %></h2 class="item-title">
                <p class="item-sub-title item-desc"><%= item.description %></p>
                <p class="time-created-at item-sub-title completed-item-row">
                  Created <%= time_ago_in_words(item.created_at) %> ago
                </p>
              </div>
              <div class="col-md-2">
                <p><%= link_to item, method: :delete, data: {confirm: 'Are you sure?'} do %></p>
                    <i class="fa fa-trash fa-lg"></i>
                <% end %>
              </div>
            </div>

        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render 'welcome_page' %>
<% end %>
